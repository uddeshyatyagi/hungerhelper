extends layout

block content
    link(rel='stylesheet' href='/stylesheets/register.css')
    include partials/navbar-unauthenticated
    div(class="container")

        div(class="card w-50" id="card")
            h1(class="card-header" id="card_header") Register
            div(class="container")
                include partials/error-message
                form(action="/register" method="POST")
                    div(class="form-group")
                        label(for="username" id="login_register_labels") Username
                        input(type="text" class="form-control" name="username" placeholder="Enter username" id="register-username" required)
                    div(class="form-group")
                        label(for="email" id="login_register_labels")  Email
                        input(type="email" class="form-control" name="email" placeholder="Enter valid  email (e.g. john.doe@gmail.com)" pattern=".+@gmail.com" id="register-email" required)
                    div(class="form-group")
                        label(for="password" id="login_register_labels") Password
                        input(type="password" class="form-control" name="password" placeholder="Enter password" id="register-password" required)
                    div(class="text-center")
                        button(type="submit" class="btn btn-primary" id="login_register_button") Register

